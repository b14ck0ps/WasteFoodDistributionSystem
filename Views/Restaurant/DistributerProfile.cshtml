@model WasteFoodDistributionSystem.Models.EF.Employee
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_Layout_Dnr.cshtml";
}

<div class="container">
    <div class="main-body">
        <div class="row flex-column align-items-center">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center justify-content-center">
                            <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">
                            <div class="mt-3">
                                <h4>@Model.Name</h4>
                                <p class="text-secondary mb-1">Serving For ZERO HUNGER</p>
                                <p class="text-muted font-size-sm">@Model.AssignedArea</p>
                            </div>
                        </div>
                    </div>
                </div>
                @**Profile INFO*@
            </div>
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Full Name</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.Name
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Email</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.Email
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Phone</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.ContactNumber
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Address</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.AssignedArea
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <section>
                <h6 class="fw-semibold m-3">Food Distribution Records</h6>
                <div class="d-flex justify-content-around mx-5">
                    <div class="card record">
                        <div class="d-flex">
                            <i class="bi bi-box2-heart me-4" style="font-size: 3em;"></i>
                            <div>
                                <h5 class="fw-bold">@ViewBag.Dispatches</h5>
                                <p>People Reached</p>
                            </div>
                        </div>
                    </div>
                    <div class="card record">
                        <div class="d-flex">
                            <i class="bi bi-check-circle me-4" style="font-size: 3em;"></i>
                            <div>
                                <h5 class="fw-bold">@ViewBag.Dispatches</h5>
                                <p>Total Dispatch</p>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
