
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_Dnr.cshtml";
}

<div class="d-flex flex-wrap">
    <div>
        <a href="/Restaurant/AddDonation">
            <div class="card dnr-card add">
                <i class="bi bi-plus-circle-dotted d-block" style="font-size: 3em; margin-top: 50%; color: rgb(255, 61, 64);"></i>
                Add New Donation
            </div>
        </a>
    </div>
    @for (int i = 0; i < 7; i++)
    {
        <div>
            <a href="/Restaurant/EditDonation/@i">
                <div class="card dnr-card">
                    <img class="rounded" src="https://i.pinimg.com/736x/a5/ac/70/a5ac709033b47cf709359b960a73f59d.jpg" alt="Food" width="150" />
                    <h5 class="mt-3">Buffet Remaining</h5>
                    <p class="text-muted">Pending</p>
                    <span class="small text-muted"><i class="bi bi-clock-history"></i> 5H</span>
                    <span class="small text-muted"><i class="bi bi-truck-flatbed ms-2"></i> 10</span>
                </div>
            </a>
        </div>
    }
</div>
<div class="d-flex flex-column justify-content-center align-items-center">
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
        </ul>
    </nav>
</div>