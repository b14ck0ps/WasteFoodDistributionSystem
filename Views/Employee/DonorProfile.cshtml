@model WasteFoodDistributionSystem.Models.EF.Restaurant
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_Layout_Emp.cshtml";
}

<div class="container">
    <div class="main-body">
        <div class="row flex-column align-items-center">
            <div class="col-md-4 mb-3">
                <div class="card" style="width:300px">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center justify-content-center">
                            <img src="@Url.Content("~/Images/RestaurentPicture/" + Model.Image)" alt="DonorPFP" class="rounded" width="280">
                            <div class="mt-3">
                                <h4>@Model.Name</h4>
                                <p class="text-secondary mb-1">Donor</p>
                                <p class="text-muted font-size-sm">@Model.Address</p>
                            </div>
                        </div>
                    </div>
                </div>
                @**Profile INFO*@
            </div>
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Restaurant Name</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.Name
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Email</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.Email
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Phone</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.ContactNumber
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Address</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.Address
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
