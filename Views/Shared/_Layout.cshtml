<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    <div class="mx-5 d-flex justify-content-between align-items-center ">
        <a href="/" class=" mt-3 logo text-decoration-none">ZERO HUNGER</a>
        <div>
            @if (Session["Role"] as string == "Emp")
            {
                <a class="btn btn-outline-info px-5" href="/Employee/Index">Dashboard</a>
            }
            else if (Session["Role"] as string == "Dnr")
            {
        <a class="btn btn-outline-info px-5" href="/Restaurant/Index">Dashboard</a>
            }
            else
            {
                <a class="btn btn-outline-info px-5" href="/Employee/Login">Help</a>
            }
        </div>
    </div>

    @RenderBody()

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>

</html>