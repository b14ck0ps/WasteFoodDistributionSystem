<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>

    <nav class="d-flex align-items-center justify-content-between mx-5">
        <p class="logo">ZERO HUNGER</p>
        <a class="link-primary text-decoration-none" href="/Restaurant/DonorProfile">
            <img class="nav-profile-pic rounded" src="https://salomiindiannoho.com/images/about/about-img.png" alt="Profile" />
            @Session["Name"]
        </a>
    </nav>
    <main class="d-flex">
        <nav class="side-nav">
            <a href="@Url.Action("Index", "Restaurant")" @(ViewContext.RouteData.Values["Controller"].ToString() == "Restaurant" && (ViewContext.RouteData.Values["Action"].ToString() == "Index" || ViewContext.RouteData.Values["Action"].ToString() == "EditDonation" || ViewContext.RouteData.Values["Action"].ToString() == "AddDonation") ? "class=nav-active" : "")><i class="bi bi-view-list w-25"></i>Donate</a>

            <a href="@Url.Action("History", "Restaurant")" @(ViewContext.RouteData.Values["Controller"].ToString() == "Restaurant" && ViewContext.RouteData.Values["Action"].ToString() == "History" ? "class=nav-active" : "")><i class="bi bi-clock-history w-25"></i>History</a>

            <a href="@Url.Action("DonorProfile", "Restaurant")" @(ViewContext.RouteData.Values["Controller"].ToString() == "Restaurant" && ViewContext.RouteData.Values["Action"].ToString() == "DonorProfile" ? "class=nav-active" : "")><i class="bi bi-person-lines-fill w-25"></i>Profile</a>
            <a href="/Restaurant/Logout"><i class="bi bi-box-arrow-left w-25"></i>Logout</a>
        </nav>
        <section class="ds-content">
            @RenderBody()
        </section>
    </main>


    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>

</html>