<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>

    <nav class="d-flex align-items-center justify-content-between mx-5">
        <p class="logo">ZERO HUNGER</p>
        <a class="link-primary text-decoration-none" href="/Employee/Profile">
            <img class="nav-profile-pic rounded-circle" src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Profile" />
            Azran Hossain
        </a>
    </nav>
    <main class="d-flex">
        <nav class="side-nav">
            <a href="@Url.Action("Index", "Employee")" @(ViewContext.RouteData.Values["Controller"].ToString() == "Employee" && ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "class=nav-active" : "")>Serve</a>

            <a href="@Url.Action("History", "Employee")" @(ViewContext.RouteData.Values["Controller"].ToString() == "Employee" && ViewContext.RouteData.Values["Action"].ToString() == "History" ? "class=nav-active" : "")>History</a>

            <a href="@Url.Action("Setting", "Employee")" @(ViewContext.RouteData.Values["Controller"].ToString() == "Employee" && ViewContext.RouteData.Values["Action"].ToString() == "Setting" ? "class=nav-active" : "")>Setting</a>
            <a href="/Employee/Logout">Logout</a>
        </nav>
        <section class="ds-content">
            @RenderBody()
        </section>
    </main>


    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>

</html>